{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "outDir": "out",
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "typeRoots": ["node_modules/@types"],
        "strictNullChecks": true
    },
    "include": [
        "src",
        "test",
        "typings"
    ],
    "compileOnSave": false,
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}